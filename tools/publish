#!/usr/bin/env bash

set -eo pipefail

# where am i?
me="$0"
me_home=$(dirname "$0")
me_home=$(cd "$me_home" && pwd)

# project
project_home=$(cd "$me_home/.." && pwd)

# deps
. "$me_home/_lib.sh"

# defaults
image_name=monotron
context_name=brian
image_host=docker.io
version=$(shell git log --pretty=format:'%h' -n 1)

# parse arguments
args=$(getopt p:v: $*)
set -- $args
for i; do
  case "$i"
  in
    -p)
      context_name="$2"; shift;
      shift;;
    -v)
      version="$2"; shift;
      shift;;
    --)
      shift; break;;
  esac
done

if [ -z "$context_name" ]; then
  echo "*** No context specified for repo; use: -p <project_id>"
  exit 1
fi
if [ -z "$version" ]; then
  echo "*** No version specified; use: -v <version>"
  exit 1
fi

# configure
image_url=$image_host/$context_name/$image_name

# build our container
docker build \
  -t "$image_name:latest" \
  -t "$image_name:$version" \
  -t "$image_url:latest" \
  -t "$image_url:$version" \
  -f "$project_home/deploy/build/Dockerfile" \
  "$project_home"

# push to our repo
docker push "$image_url:latest"
docker push "$image_url:$version"
